<%- include('partials/header') -%>

<main class="container mx-auto">
  <div class="">
    <div class=" my-16">
      <h2 class="text-2xl text-center"><%= activity.activityName %></h2>
      <% if (activity.image !== " ") { %>
        <img class="flex h-40 w-40 object-center items-center justify-center mx-auto" src="<%= activity.image %>" 
          <% } else { %>
            <img class="flex h-1/3 w-1/3 object-center items-center justify-center mx-auto" src="/imgs/Square_gray.png">
          <% } %>
      <div class="text-center"><%= activity.actDescription %></div>
    </div>
    <div>
      <form name="activity">
        <label> key:<input value="<%=activity._id %>"  type="text" name="name"> </label>
        <label> value:  <input value="<%= activity._id %>" type="text" name="data" </label>
        <button type="button" id="saveMe"> save to collection </button>
      </form>
    </div>
  </div>

    <div class=" mx-auto">
      <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded mx-auto" href="/hac/activities">Return to all activities</a>
    </div>
</main>



<%- include('partials/footer') -%>
