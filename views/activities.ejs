  <!-- Page content wrapper-->
    <div id="page-content-wrapper">

      <!-- activities go here -->

        <ul class="row list-unstyled" >
          <div class="col-md">
            <% for(var i=0; i<activities.length; i++) {%>
              <li class="card" style"width: 18rem;">
                <img class="card-img-top" src="<%= activities[i].image%>">
                <div class = "card-body">
                  <a href="/hac/previewAct/<%= activities[i]._id%>">
                    <span> <%= activities[i].activityName %> </span><br></a>
                  <p> <%= activities[i].actDescription%> </p>
                </div>
                  
              </li>
            <% } %>
          </div>
        </ul>
